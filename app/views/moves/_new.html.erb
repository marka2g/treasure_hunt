<div>
   <%= form_with class: "flex flex-row gap-2 items-center", model: [game, Move.new] do |form| %>
    <%= form.hidden_field :game_id, value: game.id %>
    <div class="basis-1/3">
      <%= form.label "...east(-) | west(+)" %>
      <%= form.number_field :x, in: -19..19, class: "number-input"  %>
    </div>
    <div class="basis-1/3">
      <%= form.label "...north(-) | south(+)" %>
      <%= form.number_field :y, in: -19..19, class: "number-input" %>
    </div>
    <div class="basis-1/3">
      <%= form.button "Move 🚶🏽", class: "submit" %>
    </div>
  <% end %>
</div>
