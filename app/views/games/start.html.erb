<div>
  <h1 class="text-4xl font-bold">🏴‍☠️ Hunt for the Treasure 🏴‍☠️</h1>

  <section>
    <%= render "layouts/flash" %>
  </section>

  <p>Move East/West & North/South. Each value represents 100 meters</p>

  <%= form_with url: "/games/move", method: :post, class: "flex flex-row gap-4 items-center" do |form| %>
    <%= form.hidden_field :game_id, value: @game.id %>
    <div class="basis-1/3">
      <%= form.label "...north(-) south(+)" %>
      <%= form.number_field :north_south, in: -19..19, class: "number-input"  %>
    </div>
    <div class="basis-1/3">
      <%= form.label "...east(-) west(+)" %>
      <%= form.number_field :east_west, in: -19..19, class: "number-input" %>
    </div>
    <div class="basis-1/3">
      <%= form.button "Move 🚶🏽", class: "submit" %>
    </div>
  <% end %>

  <% @winners.each do |game| %>
    <div class="flex">
      <div>
        <%= game.email %>
      </div>
      <div>
        <%= game.winning_distance %>
      </div>
    </div>
  <% end %>

</div>
