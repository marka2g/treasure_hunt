<div class="max-w-3xl mx-auto">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col justify-between">
    <h1 class="text-4xl">🏴‍☠️ Hunt for the Lost Treasure 🏴‍☠️</h1>
    <div class="pb-4 text-xs italic font-semibold">Each single value represents 100 meters</div>
    <%= render "moves/new", game: @game %>

    <%= render "games/moves", game: @game %>
    
  </div>
</div>
