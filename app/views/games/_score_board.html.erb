<section class="mt-8">
  <h1 class="text-center">Score Board</h1>
  <% winners.each do |game| %>
    <div class="p-2 border border-purple-500 border-1">
      <div class="flex justify-between gap-8 border-purple-500 border-1">
        <div>
          <%= game.email %>
        </div>
        <div>
          <%= game.winning_distance %> meters from treasure
        </div>
      </div>
    </div>
  <% end %>
</section>